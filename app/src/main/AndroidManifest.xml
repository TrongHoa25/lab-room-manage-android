<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="huedev.org">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iv_logo_login"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activity.main.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.device.DeviceActivity"></activity>
        <activity android:name=".ui.activity.auth.login.LoginActivity"></activity>
        <activity android:name=".ui.activity.computer.ComputerActivity"></activity>
        <activity android:name=".ui.activity.user.update.UEditInfoActivity"></activity>
        <activity android:name=".ui.activity.add.AddActivity"></activity>
        <activity android:name=".ui.activity.user.UserActivity"></activity>
    </application>

</manifest>