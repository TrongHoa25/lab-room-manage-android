<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.device.DeviceActivity">

    <RelativeLayout
        android:id="@+id/relative_divicetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:id="@+id/image_title_device"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_pc" />

        <TextView
            android:id="@+id/text_comtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_title_device"
            android:layout_centerHorizontal="true"
            android:text="Computer"
            android:textSize="@dimen/text_size_divice_activity" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:background="#a6cdd7"
        android:id="@+id/recycler_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_divicetitle"
        android:layout_marginBottom="5dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>