<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_edit_device_title"
        android:textStyle="bold"
        android:text="EDIT DEVICE"
        android:layout_marginTop="220dp"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_edit_device_name"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_edit_device_title"
        android:layout_width="230dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/edt_edit_device_desc"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edt_edit_device_name"
        android:layout_width="230dp"
        android:layout_height="50dp" />
</RelativeLayout>