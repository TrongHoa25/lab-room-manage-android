<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/iv_bg_login"
    tools:context=".ui.activity.auth.login.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/bg_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/left_rc_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@null"
                android:src="@drawable/iv_logo_login"
                android:layout_marginTop="@dimen/layout_size_80"
                android:layout_gravity="center"
                android:layout_width="@dimen/layout_size_100"
                android:layout_height="@dimen/layout_size_90" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/margin_20"
                android:layout_marginTop="@dimen/layout_size_30"
                android:text="LOGIN"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/left_rc_10"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_20"
                android:padding="@dimen/left_rc_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et.usernameLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_size_60"
                    android:background="@drawable/custom_edittext"
                    android:gravity="center"
                    android:hint="@string/username_login"
                    android:inputType="text"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/fab_margin_16" />
                <EditText
                    android:id="@+id/et.passwordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_size_60"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/custom_edittext"
                    android:gravity="center"
                    android:hint="@string/password_login"
                    android:inputType="textPassword"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/fab_margin_16" />


                <Button
                    android:layout_marginTop="@dimen/margin_20"
                    style="?android:attr/buttonStyleSmall"
                    android:id="@+id/btn.gologin"
                    android:textColor="@color/colorWhile"
                    android:background="@drawable/custom_hover_btn_go"
                    android:text="@string/go"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_size_60" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/tv.registerAccount"
                    android:layout_marginTop="@dimen/item_room_title_25"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textColor="@color/colorWhile"
                    android:textSize="@dimen/fab_margin_16"
                    android:text="@string/not_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>