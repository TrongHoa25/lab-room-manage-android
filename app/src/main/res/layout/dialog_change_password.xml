<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_5"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/margin_20"
        android:background="@drawable/custom_border_bg_create_room"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:id="@+id/linear.old.password"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/iv_password"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/size_img_40" />

            <EditText
                android:inputType="textPassword"
                android:textColor="@color/colorWhile"
                android:textColorHint="@color/colorWhile"
                android:textSize="12sp"
                android:padding="@dimen/left_rc_10"
                android:layout_marginLeft="@dimen/left_rc_10"
                android:hint="@string/password_login"
                android:id="@+id/et.old.password"
                android:background="@drawable/custom_edittext_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_img_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@id/linear.old.password"
            android:id="@+id/linear.new.password"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/iv_new_password"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/size_img_40" />

            <EditText
                android:inputType="textPassword"
                android:textColor="@color/colorWhile"
                android:textColorHint="@color/colorWhile"
                android:textSize="12sp"
                android:padding="@dimen/left_rc_10"
                android:layout_marginLeft="@dimen/left_rc_10"
                android:hint="@string/new_password"
                android:id="@+id/et.new.password"
                android:background="@drawable/custom_edittext_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_img_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@id/linear.new.password"
            android:id="@+id/linear.confirm.password"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/iv_confirm_password"
                android:id="@+id/iv.logoDescRoom"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/size_img_40" />

            <EditText
                android:inputType="textPassword"
                android:textColor="@color/colorWhile"
                android:textColorHint="@color/colorWhile"
                android:textSize="12sp"
                android:padding="@dimen/left_rc_10"
                android:layout_marginLeft="@dimen/left_rc_10"
                android:hint="@string/confirm_new_password"
                android:id="@+id/et.confirm.new.password"
                android:background="@drawable/custom_edittext_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_img_40" />
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@id/linear.confirm.password"
            android:background="@color/colorWhile"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/left_rc_10"
            android:layout_below="@id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/colorWhile"
                android:textSize="@dimen/left_rc_10"
                android:text="@string/cancel"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_hover_btn_edit"
                android:id="@+id/btn.cancel.change.password"
                android:layout_width="70dp"
                android:layout_height="@dimen/size_img_40" />

            <Button
                android:id="@+id/btn.confirm.change.password"
                android:textSize="@dimen/left_rc_10"
                android:textColor="@color/colorWhile"
                android:text="@string/confirm"
                android:background="@drawable/custom_hover_btn_edit"
                android:layout_toLeftOf="@id/btn.cancel.change.password"
                android:layout_width="70dp"
                android:layout_height="@dimen/size_img_40" />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>