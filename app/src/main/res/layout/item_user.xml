<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/swipe.UserItem"
    android:layout_marginTop="@dimen/left_rc_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/relative.handle.user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib.DelUser"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_edit"
            android:layout_width="@dimen/layout_size_50"
            android:layout_height="@dimen/layout_size_50" />

        <ImageButton
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/ib.EditUser"
            android:src="@drawable/btn_delete"
            android:layout_width="@dimen/layout_size_50"
            android:layout_height="@dimen/layout_size_50" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative.info.user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo_manager"
            android:id="@+id/iv.itemUser"
            android:layout_width="@dimen/layout_size_50"
            android:layout_height="@dimen/layout_size_50" />

        <LinearLayout
            android:layout_marginLeft="@dimen/left_rc_10"
            android:layout_toRightOf="@+id/iv.itemUser"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/fab_margin_16"
                android:text="@string/fullname_user"
                android:id="@+id/tv.itemNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="2dp"
                android:text="@string/email_user"
                android:id="@+id/tv.itemEmailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv.itemRoleUser"
            android:textSize="14sp"
            android:textColor="@color/bgToolbarComputer"
            android:padding="2dp"
            android:text="Role"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</com.daimajia.swipe.SwipeLayout>
