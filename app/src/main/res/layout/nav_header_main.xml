<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_nav_header"
    android:layout_width="match_parent"
    android:layout_height="178dp">

    <LinearLayout
        android:background="@color/background_while_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_marginLeft="@dimen/layout_size_30"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_size_60"
                android:src="@drawable/logo_manager"
                android:id="@+id/iv.logoUser"
                android:layout_width="@dimen/layout_size_60"
                android:layout_height="@dimen/layout_size_60" />

            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/tv.nameUser"
                android:textSize="@dimen/margin_15"

                android:text="ADMIN"
                android:layout_marginTop="@dimen/left_rc_10"
                android:textColor="@color/colorWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/tv.position"
                android:textSize="14dp"
                android:text="@string/technicians"
                android:layout_marginTop="@dimen/layout_size_3"
                android:textColor="@color/red_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>





</LinearLayout>